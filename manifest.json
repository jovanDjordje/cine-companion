{
  "manifest_version": 3,
  "name": "Botodachi",
  "version": "0.1.0",
  "description": "Your AI companion for movies and videos. Chat about what's happening using real-time subtitles. Not affiliated with any streaming service.",
  "action": {
    "default_title": "Botodachi"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.netflix.com/*"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://*.netflix.com/*"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["robo.png"],
      "matches": ["*://*.youtube.com/*", "*://*.netflix.com/*"]
    }
  ]
}
