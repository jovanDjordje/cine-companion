{
  "manifest_version": 3,
  "name": "Botodachi",
  "version": "0.1.1",
  "description": "Chat with AI about YouTube and Netflix videos using real-time subtitles. Privacy-focused, no tracking.",
  "action": {
    "default_title": "Botodachi"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.netflix.com/*"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://*.netflix.com/*"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ]
}
